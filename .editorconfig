# EditorConfig config file
# https://editorconfig.org
#
# Add key=value settings to use below

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
charset = utf-8


[*.{java,maven,gradle,xml}]
indent_size = 4
trim_trailing_whitespace = true


[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = true
